<Page x:Class="WpfServisCenter.View.Pages.Servis.AddEditServisPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfServisCenter.View.Pages.Servis"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditServisPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="400" VerticalAlignment="Center">
            <TextBlock Text="Наименование услуги" />
            <TextBox Text="{Binding Имя}" />
           
            
            <TextBlock Text="Цена услуги" />
            <TextBox Text="{Binding Цена}"/>
            <Button Click="SaveClick" Content="Сохранить" />

        </StackPanel>
    </Grid>
</Page>
