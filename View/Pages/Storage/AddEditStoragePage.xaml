<Page x:Class="WpfServisCenter.View.Pages.Storage.AddEditStoragePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfServisCenter.View.Pages.Storage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditStoragePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="400" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Категория" />
           
            <ComboBox Text="{Binding Категория}"  Name="CategoryComboBox" />

            <TextBlock Text="Название" />
            <TextBox Text="{Binding Имя}"/>
            <TextBlock Text="Количество" />
            <TextBox Text="{Binding Количество}"  />
            <TextBlock Text="Цена" />
            <TextBox Text="{Binding Цена}" />


            <Button Click="SaveClick" Content="Сохранить" />

        </StackPanel>
    </Grid>
</Page>
